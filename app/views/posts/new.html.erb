<div id="page_wrapper">
  <h1>New Post</h1>
   <%= form_for :post, url: posts_path do |f| %>
   <% if @post.errors.any? %> 
      <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %> prevented your post from being saved. </h2> 
      <ul>
      <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>

      </ul>    
      </div>  
   <% end %> 

    <p> 
    <%= f.label :title %><br>
    <%= f.text_field :title %>  
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
  
  <p>
      <%= f.file_field :image %>
  </p>

<p>
      <%= f.label :tag_list %><br>
      <%= f.text_field :tag_list %>
    </p>

    <p>
    <%= f.submit %>
    </p>
  <% end %> 
</div>  