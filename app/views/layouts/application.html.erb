<!DOCTYPE html>
<html>
<head>
  <title>Hope</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <% stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Helvetica:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 <div id="sidebar">
 	<div id="logo">
 		<%= link_to root_path do %>
 			<% image_tag "logo.svg"%>
 		<% end %>	
	</div>
	<ul>
		<li class="category">Website</li>
		<li><%= link_to "Hope", root_path %></li>
		<li><%= link_to "About", about_path %></li>

	</ul>
	<ul>
	<li>
	<% if !author_signed_in? %>
	<p><%= link_to "Author Sign In", sign_in_path %> </p>
	<% end %>
	</li>
	</ul>
</div>




<div id="main_content"> 
	<div id="header">
		<% if current_page?(root_path) %>
			<p>All Posts</p>
		<% elsif current_page?(about_path) %>
			<p>About</p>
		<% else %>
			<%= link_to "Back to All Posts", root_path %>
		<% end %>			
		
		<% if author_signed_in? %> 
			<div class="buttons">
				<button class="button"><%= link_to "New Post", new_post_path %></button>
				<button class="button"><%= link_to "Log Out", sign_out_path %></button>
			</div>
		<% end %>	
	</div>	
			<% flash.each do |name,message| %>
				<%= content_tag(:div, message, class: "alert") %>	
			<% end %>

	

	<%= yield %>
</div>


</body>
</html>
